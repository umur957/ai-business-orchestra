# AI Business Orchestra Environment Variables

# ===== CORE API KEYS =====
OPENAI_API_KEY=sk-your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ===== EMAIL CONFIGURATION =====
# Gmail SMTP Configuration
GMAIL_EMAIL=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# ===== ZOOM INTEGRATION =====
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# ===== GOOGLE WORKSPACE =====
# Google Drive and Sheets API
GOOGLE_DRIVE_CREDENTIALS_PATH=path/to/service_account.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# ===== COMPANY CONFIGURATION =====
COMPANY_NAME=Your Company
COMPANY_WEBSITE=https://yourcompany.com
COMPANY_CULTURE_VALUES="professional, innovative, customer-focused, quality-driven"
COMPANY_TONE_OF_VOICE="professional, friendly, solution-oriented"

# ===== HR SETTINGS =====
# Default job posting platforms
JOB_PLATFORMS=LinkedIn,Indeed,JobStreet
# Default interview duration (minutes)
DEFAULT_INTERVIEW_DURATION=60
# Candidate compatibility threshold (0-100)
COMPATIBILITY_THRESHOLD=75

# ===== ADMIN SETTINGS =====
# Invoice processing
INVOICE_EMAIL_FOLDER=Invoices
INVOICE_ARCHIVE_FOLDER=Processed_Invoices
# Document archiving
DOCUMENT_SOURCE_FOLDER=To_Process
DOCUMENT_ARCHIVE_FOLDER=Archived_Documents
# Meeting preparation
MEETING_PREP_HOURS_BEFORE=2

# ===== FILE PROCESSING =====
# Supported file types
SUPPORTED_PDF_TYPES=.pdf
SUPPORTED_DOC_TYPES=.docx,.doc
SUPPORTED_EXCEL_TYPES=.xlsx,.xls

# ===== DEVELOPMENT SETTINGS =====
# Set to True for detailed logging
DEBUG=True
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===== AI SYSTEM SETTINGS =====
# Set to True to run without real API calls (for testing)
USE_SIMULATION=True
# Default AI provider (openai or gemini)
DEFAULT_LLM=openai
